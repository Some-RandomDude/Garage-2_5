@model IEnumerable<Models.ParkedVehicle>

@{
    ViewBag.Title = "DetailedList";
}

<h2>Parked Vehicles</h2>

<p>
    @{

        //var tempModel = new Models.Member();
        using (Html.BeginForm())
        {
            @Html.TextBox("SearchFirstName")
            <span>&nbsp;</span>
            @Html.TextBox("SearchLastName")

            <input type="submit" value="Search Member" class="btn btn-primary" />
        }
    }
</p>

<table class="table table-hover sortable">
    <thead>
        <tr class="alert-info">
            <th>
                @Html.DisplayNameFor(model => model.Member.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleType.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeOfCheckIn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Member.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleType.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegNum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeOfCheckIn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success btn-xs color-button" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-xs color-button" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs color-button" })
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @Html.ActionLink("Normal View", "Index", null, new { @class = "label label-primary color-button" })
    <span> </span>
    @Html.ActionLink("Create New", "Create", null, new { @class = "label label-primary color-button" })
</div>



