@model Garage_2_5.ViewModels.ParkedVehicleListViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Parked Vehicles</h2>


<p>
    @{

        //var tempModel = new Models.Member();
        using (Html.BeginForm())
        {
            //@Html.TextBox("SearchVehicleType")
            @Html.DropDownList("VehicleType", Model.SearchVehicleTypes, "Vehicle Type", new { @class = "form-control", style="display: inline-block" })
            <span> </span>
            @Html.TextBox("SearchRegNum", null, htmlAttributes: new { @class = "form-control", style = "display: inline-block" })

            <input type="submit" value="Search Vehicle" class="btn btn-primary" style="display: inline-block"/>
        }
    }
</p>

<table class="table table-hover sortable">
    <thead>
        <tr class="alert-info">
            <th>
                @Html.DisplayNameFor(model => model.ParkedVehicles.First().Member.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParkedVehicles.First().VehicleType.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParkedVehicles.First().RegNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParkedVehicles.First().TimeOfCheckIn)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.ParkedVehicles)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Member.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleType.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegNum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeOfCheckIn)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success btn-xs color-button" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-xs color-button" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs color-button" })
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @Html.ActionLink("Detailed View", "DetailedList", null, new { @class = "label label-primary color-button" })
    <span> </span>
    @Html.ActionLink("Create New", "Create", null, new { @class = "label label-primary color-button" })
</div>


